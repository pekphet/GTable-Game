<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/sp_main_skip"
            android:layout_width="64dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:padding="0dp"
            android:gravity="center"
            android:background="@drawable/btn_bg_blue_blk_40"
            android:layout_marginLeft="24dp"/>

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/btn_bg_blue_blk_sel"
            android:gravity="center"
            android:text="START"
            android:textColor="@drawable/text_blue_btn_sel"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_main_lv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_color_lv"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_main_exp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="@color/text_color_lv"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_ability"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_main_hp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_color_hp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_main_atk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_color_atk"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_main_def"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_color_def"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_main_gold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_color_lv"
            android:textSize="14dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_main_info"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/t_icon_question" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_main_ability"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_home_atk_up"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_bg_blue_blk_sel"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@drawable/text_blue_btn_sel"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_home_def_up"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_bg_blue_blk_sel"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@drawable/text_blue_btn_sel"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_home_hp_up"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_bg_blue_blk_sel"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@drawable/text_blue_btn_sel"
            android:textSize="16dp"
            android:textStyle="bold"/>

    </LinearLayout>
</RelativeLayout>